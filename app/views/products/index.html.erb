<h1> All Products</h1>
<hr>
<% @products.each_slice(3) do |products| %>
	<div class="row">
		<% products.each do |product| %>
			<div class="col-md-4">
				<div class="panel panel-default">
					<div class="panel-heading">
						<%= product.name %>
					</div>
					<div class="panel-body">
						<%= product.description %>
						<%= product.price %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
<% end %>

<br>
<br>
<%= link_to "New Product", new_product_path, class: "btn btn-primary" %>
